<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuDrink"
    android:background="@drawable/appback2">

    <TextView
        android:id="@+id/textDrinks"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="531dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-10dp"
        android:text="@string/titleDrinks"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/titleDrinks"
        android:layout_width="594dp"
        android:layout_height="337dp"
        android:layout_below="@+id/textDrinks"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="@string/textDrinks"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/ytDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="178dp"
        android:text="@string/buttox" />

</RelativeLayout>