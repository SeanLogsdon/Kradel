<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuSounds"
    android:background="@drawable/appback2">

    <TextView
        android:id="@+id/textSounds"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="567dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-7dp"
        android:text="@string/titleSounds"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/titleSounds"
        android:layout_width="631dp"
        android:layout_height="363dp"
        android:layout_above="@+id/ytSounds"
        android:layout_below="@+id/textSounds"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/textSounds"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ytSounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="144dp"
        android:text="@string/buttox" />

</RelativeLayout>