<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuBreath"
    android:background="@drawable/appback2">

    <TextView
        android:id="@+id/textBreath"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-9dp"
        android:text="@string/titleBreath"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/titleBreath"
        android:layout_width="610dp"
        android:layout_height="359dp"
        android:layout_below="@+id/textBreath"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:text="@string/textBreath"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ytBreath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="155dp"
        android:text="@string/buttox" />

</RelativeLayout>